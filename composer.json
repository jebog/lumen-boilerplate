{
  "name": "lloricode/lumen-boilerplate",
  "description": "The Lumen boilerplate project.",
  "keywords": [
    "framework",
    "laravel",
    "lumen",
    "boilerplate"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.1.3",
    "barryvdh/laravel-cors": "^0.11.2",
    "dusterio/lumen-passport": "^0.2.8",
    "laravel/lumen-framework": "5.7.*",
    "league/fractal": "^0.17.0",
    "prettus/l5-repository": "^2.6",
    "spatie/laravel-permission": "^2.27",
    "vinkla/hashids": "^5.1",
    "vlucas/phpdotenv": "~2.2"
  },
  "require-dev": {
    "appzcoder/lumen-routes-list": "^1.0",
    "barryvdh/laravel-ide-helper": "^2.5",
    "doctrine/dbal": "^2.8",
    "fzaninotto/faker": "~1.4",
    "league/flysystem": "^1.0",
    "mockery/mockery": "~1.0",
    "mpociot/laravel-apidoc-generator": "^3.2",
    "phpunit/phpunit": "~7.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "fresh": [
      "@php artisan migrate:fresh --seed --ansi",
      "@php artisan passport:install --force --ansi",
      "@php artisan apidoc:generate --ansi"
    ],
    "clear-all": [
      "@php artisan cache:clear --ansi",
      "@php artisan permission:cache-reset --ansi",
      "composer dump-autoload --no-interaction --ansi --optimize"
    ],
    "ide-helper": [
      "@php artisan ide-helper:generate --ansi",
      "@php artisan ide-helper:meta --ansi"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html ./coverage"
    ],
    "coverage-txt": [
      "./vendor/bin/phpunit --coverage-text --coverage-clover=coverage.clover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
